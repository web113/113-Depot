<h1><%= t('.Listing carts') %></h1>

<table class="cart_detail">
<tr>
<th colspan="2"><%= t('.Products') %></th>
<th width = "100"><%= t('.Price') %></th>
<th width = "100"><%= t('.Quantity') %></th>
<th width = "100"><%= t('.Total') %></th>
<th width = "100"><%= t('.button') %></th>
</tr>

<tr class="alt_odd">
<td height = "5" width = "120"></td>
<td width = "150"></td>
<td ></td>
<td ></td>
<td ></td>
<td ></td>

</tr>

<% for item in @cart.line_items %>
<tr class="<%= cycle('alt_even', 'alt_odd') %>" >
<td height = "100", weight = "80"><%= link_to (image_tag(item.product.image_url)),{:controller => "products", :action => "show",:id => item.product.id } %></td>
<td ><h3><%= item.product.title %></h3></td>
<td><%= number_to_currency(item.product.price) %></td>
<td><%= item.quantity %></td>
<td><%= number_to_currency(item.product.price*item.quantity) %></td>
<td><%= button_to t('.delete'), item, :method => :delete, :confirm => t('.sure') %></td>

</tr>
<%end%>

