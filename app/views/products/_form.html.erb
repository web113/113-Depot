<%= form_for(@product, :html => {:multipart => true}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>

    <br />
  <% end %>

  <div class="form_item">
    <%= f.label  t(".title") + ":" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="form_item">
    <%= f.label  t(".description") + ":" %><br />
    <%= f.text_area :description, :rows => 6, :cols => 40 %>
  </div>
  <div class="form_item">
    <%= f.label  t(".image_url") + ":" %><br />
    <%= f.file_field :image_url %>
  </div>
  <div class="form_item">
    <%= f.label  t(".price") + ":" %><br />
    <%= f.text_field :price %>
  </div>
  <div class="form_item">
    <%= f.label t(".category") + ":" %><br />
    <%= f.select :category, Product::CATE_TYPES, :prompt => "Select a category"  %>
  </div>
  <div class="form_item">
    <%= f.label t(".tag") + ":"%><br />
    <%= f.text_field :cate %>
  </div>
  <div class="form_item">
    <%= f.label  t(".inventory") + ":" %><br />
    <%= f.text_field :inventory %>
  </div>
  <div class="button">
    <%= f.submit %>
  </div>
<% end %>
