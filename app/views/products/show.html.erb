<div class = "entry">
    <%= link_to (image_tag(@product.image_url)),{:controller => "products", :action => "show",:id => @product.id } %>
    
    <h3> <%= @product.title %></h3>
    
    <%for cate in @allcates%>
       <%if cate != nil%>
          <%= link_to (cate), {:controller => "subcategories", :action => "index",:subcate => cate } %>
       <%end%>
    <%end%>
    
    <%= sanitize @product.description %>
    score:<%= @average%>
    <span class = "price"><%= number_to_currency(@product.price) %></span>
    <% if session[:user_id] %>
      <%= button_to t('.add_html'), line_items_path(:product_id => @product,:modify => "false"),
         :remote => true %>
    <% else %>
      <button class="need_to_login">Add to cart</button>
    <% end %>

    <div class = "price_line">   
    <span class = "inventory">Inventory:<%= @product.inventory%></span>
    </div>
</div>

<div class = "comment">
Comments:
</div>
<% @comments.each do |comment|%>
<table class="product_detail">
<tr>
    <th width = "50" height = "2"></th>
    <th width = "900" height = "2"></th>
</tr>
<tr class="alt_odd">
    <th>Title:</th>
    <th><%= comment.title %> </th>
</tr>
<tr class="alt_odd">
    <th>Context:</th>
    <th><%= comment.context %> </th>
</tr>
<tr class="alt_odd">
    <th>Score:</th>
    <th><%= comment.score %> </th>
</tr>
<tr class="alt_odd">
    <th>Time:</th>
    <th><%= comment.create_at %> </th>
</tr>    
<tr class="alt_odd">
    <th>Commenter:</th>
    <th><%= comment.userid %> </th>

</tr> 
</table>




<br/>
<% end %>

<% if session[:user_id] %>
<div class = "comment">
Send Comments Of My Own~!:)
</div>

<%= form_for @comment do |f| %>
<div class="field">
    <%= f.label "Title" %><br />
    <%= f.text_field :title, :size => 40%>
  </div>
  <div class="field">
    <%= f.label "Context" %><br />
    <%= f.text_area  :context,:rows => 3, :cols => 40 %>
  </div>
  <div class="field">
    <%= f.label "Score" %><br />
    <%= f.select :score, Comment::SCORE_TYPES, :prompt => "Select a score" %>
  </div>
  <div class="actions">
    <input type="hidden" name= "comment[create_at]" id="comment_create_at" value=<%= Time.now %>/>
  </div>
  <div class="actions">
    <input type="hidden" name= "comment[userid]" id="comment_userid" value=<%= @name %> >
  </div>
  <div class="actions">
    <input type="hidden" name= "comment[product_id]" id="comment_product_id" value=<%= " #{ @product.id}" %>/>
    <%=submit_tag "Update" %>
  </div>
<%end%>
<% end %>






