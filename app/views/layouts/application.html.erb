<!DOCTYPE html>
<html>
  <head>
    <title>Pragprog Books Online Store</title>
    <%= stylesheet_link_tag "scaffold" %>
    <%= stylesheet_link_tag "depot", :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "jquery-1.7.2.min.js" %>
    <%= javascript_include_tag "jquery-ui-1.8.22.custom.min.js" %>
    <%= javascript_include_tag "depot" %>
    <%= csrf_meta_tag %>
  </head>

  <body id="store">
    <div id="banner">

      <%= image_tag("logo.png") %>
      <%= @page_title || t('.title') %>

      <!--international-->
      <%= form_tag store_path, :class => 'locale' do %>
        <%= select_tag 'set_locale',
          options_for_select(LANGUAGES, I18n.locale.to_s),
          :onchange => 'this.form.submit()' %>
          <%= submit_tag 'submit' %>
          <%= javascript_tag "$$('.locale input').each(Element.hide)"%>
        <% end %>	
      </div>

      <div id="columns">
        <% if session[:user_id] %>
          <div id="side"> 

            <div id ="cart">    	
              <% if @cart %>
                <%= render @cart%>
              <%end%>
            </div>

            <% if session[:user_id] %>
              <div id="logout">
                <%= button_to 'Logout', logout_path, :method => :delete %>
              </div>
            <% end %>

          </div>
        <% end %>


        <% if session[:user_id] %>
          <div id="main" style="margin-left: 17em;">
        <% else %>
          <div id="main">
        <% end %>
          <div class="lavalamp green" >
            <ul>
              <li><%= link_to t('.home'), {:controller => "store", :action => "index" } %></li>
              <li><%= link_to 'Category', {:controller => "categories", :action => "index" } %></li>
              <% if session[:user_id] %>
                <li><%= link_to 'Orders', orders_path %></li>
                <% if User.find_by_id(session[:user_id]).name == "admin" %>
                  <li><%= link_to 'Products', products_path %></li>
                  <li><%= link_to 'Users', users_path %></li>           
                <% end %>
              <% end %>
              <li><%= link_to 'Help', {:controller => "help", :action => "index" } %></li>
              <li><%= link_to t('.news'), {:controller => "news", :action => "index" } %></li>
              <% unless session[:user_id] %>
                <li id="login"><%= link_to 'Login', {:controller => "sessions", :action => "new" } %><li>
              <% else %>
                <li><a href="javascript:" onclick="jq(logout).children().find('[value=Logout]').click();">Logout</a></li>
              <% end %>
            </ul>
          </div>

          <%= yield %>

        </div>
      </div>
    </body>
  </html>
