<!DOCTYPE html>
<html>
  <head>
    <title>Pragprog Books Online Store</title>
    <%= stylesheet_link_tag "scaffold" %>
    <%= stylesheet_link_tag "depot", :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "jquery-1.7.2.min.js" %>
    <%= javascript_include_tag "jquery-ui-1.8.22.custom.min.js" %>
    <%= javascript_include_tag "depot" %>
    <%= csrf_meta_tag %>
  </head>

  <body id="store">
    <div id="banner">

      <%= image_tag("logo.png") %>
      <%= @page_title || t('.title') %>

      <!--international-->
      <%= form_tag store_path, :class => 'locale' do %>
        <%= select_tag 'set_locale',
          options_for_select(LANGUAGES, I18n.locale.to_s),
          :onchange => 'this.form.submit()' %>
          <%= submit_tag 'submit' %>
          <%= javascript_tag "$$('.locale input').each(Element.hide)"%>
        <% end %>	
      </div>
      <div id="searching" style="float: right;  padding-top: 0.3em;">
        <!--search-->
        <%= form_tag searches_path, :class => 'serach', :method => 'get' do%>
          <%= text_field_tag "q", params[:q]%>
          <%= submit_tag "Search"%>
        <% end %>
      </div>
      <div id="columns">
        <div id="side"> 

          <div id ="cart">    	
            <% if @cart%>
              <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do%> <!--若购物车为空则不显示-->
                <%= render @cart%>
              <%end%>
            <%end%>
          </div>

          <%= link_to 'Login', {:controller => "sessions", :action => "new" } %><br />

          <% if session[:user_id] %>
            <br />
            <%= link_to 'Orders', orders_path %><br />
            <% if User.find_by_id(session[:user_id]).name == "admin" %>
              <%= link_to 'Products', products_path %><br />
              <%= link_to 'Users', users_path %><br />           
            <% end %>
            <br />
            <%= button_to 'Logout', logout_path, :method => :delete %>
          <% end %>

        </div>

        <div id="menu2" class="menu">
          <ul>
            <li><%= link_to t('.home'), {:controller => "store", :action => "index" } %></li>
            <li><%= link_to 'Category', {:controller => "categories", :action => "index" } %></li>
            <li><%= link_to 'Cart', {:controller => "carts", :action => "index" } %></li>
            <li><%= link_to 'Help', {:controller => "help", :action => "index" } %></li>
            <li><%= link_to t('.news'), {:controller => "news", :action => "index" } %></li>
          </ul>
        </div>



        <div id="main">

          <%= yield %>
        </div>
      </div>
    </body>
  </html>
